<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:agg="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    agg:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.DashBoardActivity"
    tools:showIn="@layout/activity_dash_board">

    <LinearLayout
        android:id="@+id/quickInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/revenue_number_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_light"
            />
        <TextView
            android:id="@+id/revenue_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/revenue_number_dashboard"
            android:text="Revenue"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/branded_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            />
        <TextView
            android:id="@+id/branded_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/branded_number"
            android:text="Branded Session"
            android:textStyle="bold"
            android:layout_alignLeft="@+id/branded_number"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/ctr_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_light"
            android:layout_marginLeft="18dp"
            />
        <TextView
            android:id="@+id/ctr_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ctr"
            android:textStyle="bold"
            android:layout_below="@+id/ctr_number"
            android:layout_alignLeft="@+id/ctr_number"
            />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/eCps_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_purple"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/eCps_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eCps_number"
                android:text="eCps"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/eCps_number"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/quickInfo"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_height="0.5dp"/>

    <ListView
        android:id="@+id/dashboard_listview"
        android:layout_below="@+id/quickInfo"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:layout_height="wrap_content"></ListView>
</RelativeLayout>
